<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhubaokeji.library.TitleBar
        android:id="@+id/zhubao_color_search_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:text="@string/rapoetNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    />
                <EditText
                    android:id="@+id/search_color_rapoetNo"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_edittext"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="5dp"
                    android:inputType="text"
                    android:maxLength="20"
                    android:hint="请输入证书号">
                </EditText>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="#ffd3dde6"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="倍率"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp" />
                    <EditText
                        android:id="@+id/search_color_percentage"
                        android:layout_width="match_parent"
                        android:background="@drawable/bg_edittext"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:inputType="numberDecimal"
                        android:digits="1234567890."
                        android:maxLength="10"
                        android:gravity="center"
                        android:text="3"
                        />
                <Button
                    android:id="@+id/search_color_percentageSection"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_expand_more_black_24dp"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:text="汇率"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp" />

                <EditText
                    android:id="@+id/search_color_rate"
                    android:layout_width="60dp"
                    android:background="@drawable/bg_edittext"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="6.7"
                    android:digits="1234567890."
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:maxLength="5">
                </EditText>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="#ffd3dde6"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:text="克拉"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="30dp" />

                <EditText
                    android:id="@+id/search_color_caratStart"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_edittext"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:inputType="numberDecimal"
                    android:digits="1234567890."
                    android:gravity="center"
                    android:maxLength="10"
                    android:layout_weight="0.5">
                </EditText>
                <TextView
                    android:text="~"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"/>
                <EditText
                    android:id="@+id/search_color_caratEnd"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_edittext"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:digits="1234567890."
                    android:maxLength="10"
                    android:layout_weight="0.5">
                </EditText>
                <TextView
                    android:text="克拉段"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    />
                <Button
                    android:id="@+id/search_color_caratSection"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_expand_more_black_24dp"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="#ffd3dde6"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:text="证书机构"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    />
                <Button
                    android:id="@+id/search_color_gia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/btn_round"
                    android:text="GIA"/>
                <Button
                    android:id="@+id/search_color_igi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_round"
                    android:text="IGI"/>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dip"
                android:background="#ccc"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/layout_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shape"
                    android:layout_gravity="center"
                    android:textColor="#162834"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/color_text_shape"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="12dp"
                    android:gravity="center|left"
                    android:text=""
                    android:textColor="#02a8f3"
                    android:textSize="11sp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/color_recycler_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dip"
                android:background="#ccc"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@drawable/layout_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/intensity"
                    android:layout_gravity="center"
                    android:textColor="#162834"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/color_text_intensity"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="12dp"
                    android:gravity="center|left"
                    android:text=""
                    android:textColor="#02a8f3"
                    android:textSize="11sp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/color_recycler_intensity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dip"
                android:background="#ccc"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/layout_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gloss"
                    android:layout_gravity="center"
                    android:textColor="#162834"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/color_text_gloss"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="12dp"
                    android:gravity="center|left"
                    android:text=""
                    android:textColor="#02a8f3"
                    android:textSize="11sp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/color_recycler_gloss"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dip"
                android:background="#ccc"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/layout_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color"
                    android:layout_gravity="center"
                    android:textColor="#162834"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/color_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="12dp"
                    android:text=""
                    android:gravity="center|left"
                    android:textColor="#02a8f3"
                    android:textSize="11sp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/color_recycler_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dip"
                android:background="#ccc"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/layout_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clarity"
                    android:layout_gravity="center"
                    android:textColor="#162834"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/color_text_clarity"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:layout_marginLeft="12dp"
                    android:text=""
                    android:textColor="#02a8f3"
                    android:textSize="11sp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/color_recycler_clarity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dip"
                android:background="#ccc"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="@color/search_Layout">
                <TextView
                    android:id="@+id/color_text_polish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/polish"
                    android:textColor="#162834"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:textSize="15sp" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/color_recycler_polish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="#ccc"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="@color/search_Layout">
                <TextView
                    android:id="@+id/color_text_symmetry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/symmetry"
                    android:textColor="#162834"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:textSize="15sp" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/color_recycler_symmetry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dip"
                android:background="#ccc"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="@color/search_Layout">
                <TextView
                    android:id="@+id/color_text_fluorescence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fluore"
                    android:textColor="#162834"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:textSize="15sp" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/color_recycler_fluorescence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/color_search_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_margin="5dp"
            android:background="@drawable/btn_round"
            android:text="查询"/>
        <Button
            android:id="@+id/color_search_resetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round"
            android:layout_margin="5dp"
            android:layout_weight="0.6"
            android:text="重置"/>
    </LinearLayout>
</LinearLayout>