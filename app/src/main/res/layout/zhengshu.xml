<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:id="@+id/zhengshu">

    <com.zhubaokeji.library.TitleBar
        android:id="@+id/zhengshu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:text="证书机构"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="@color/commo_text_color"
            android:id="@+id/text_rapoet" />
        <com.zhubaokeji.android.utils.ButtonM
        android:layout_width="wrap_content"
        android:layout_weight="0.5"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/button_rapoet_gia"
        android:background="@drawable/selector_btn_click_bg"
        android:text="GIA"/>
        <com.zhubaokeji.android.utils.ButtonM
        android:layout_width="wrap_content"
        android:layout_weight="0.5"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/selector_btn_click_bg"
        android:id="@+id/button_rapoet_igi"
        android:text="IGI"
        />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:orientation="horizontal" >
            <TextView
                android:text="@string/rapoetNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/commo_text_color"
                android:id="@+id/text_RapoetNo" />
            <com.zhubaokeji.android.utils.XEditText
                android:id="@+id/edit_reportNo"
                android:layout_width="match_parent"
                android:background="@drawable/bg_edittext"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="5dp"
                android:inputType="text"
                android:maxLength="20"
                android:hint="请输入证书号">
            </com.zhubaokeji.android.utils.XEditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="110dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="#02a8f3"
                android:textColor="#fff"
                android:id="@+id/btn_zhengshu_query"
                android:text="查询"/>
        </LinearLayout>
   </LinearLayout>

    <FrameLayout
        android:id="@+id/certificate"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>