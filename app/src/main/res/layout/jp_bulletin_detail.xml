<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="detail" type="com.zhubaokeji.android.bean.JpBulletinResponse"/>
    </data>
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhubaokeji.library.TitleBar
        android:id="@+id/jp_bulletin_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_10">
        <TextView
            android:text="@{detail.chtitle}"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@{detail.chcontent}"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="100dp"
            android:textColor="@color/black"
            android:lineSpacingExtra="2dp"
            android:textSize="@dimen/sp_12"
            android:lineSpacingMultiplier="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@{detail.entitle}"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@{detail.encontent}"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:lineSpacingExtra="2dp"
            android:textSize="@dimen/sp_12"
            android:lineSpacingMultiplier="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
    </layout>