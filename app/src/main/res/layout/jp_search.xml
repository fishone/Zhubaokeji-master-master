<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhubaokeji.library.TitleBar
        android:id="@+id/jp_search_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_weight="0.2">
                    <TextView
                        android:text="@string/report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        />
                    <com.zhubaokeji.android.utils.XEditText
                        android:id="@+id/jp_search_repoetNo"
                        android:layout_width="match_parent"
                        android:background="@drawable/bg_edittext"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="5dp"
                        android:inputType="text"
                        android:maxLength="15"
                        android:hint="请输入证书号">
                    </com.zhubaokeji.android.utils.XEditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="地址"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        />
                    <Button
                        android:id="@+id/jp_search_hk"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/btn_round"
                        android:text="HK"/>
                    <Button
                        android:id="@+id/jp_search_ind"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/btn_round"
                        android:text="IND"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="#ffd3dde6"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:text="克拉"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/text_carat" />

                <com.zhubaokeji.android.utils.XEditText
                    android:id="@+id/jp_search_caratStart"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_edittext"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:inputType="numberDecimal"
                    android:digits="1234567890."
                    android:gravity="center"
                    android:maxLength="10"
                    android:layout_weight="0.5">
                </com.zhubaokeji.android.utils.XEditText>
                <TextView
                    android:text="~"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"/>
                <com.zhubaokeji.android.utils.XEditText
                    android:id="@+id/jp_search_caratEnd"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_edittext"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:inputType="numberDecimal"
                    android:digits="1234567890."
                    android:gravity="center"
                    android:maxLength="10"
                    android:layout_weight="0.5">
                </com.zhubaokeji.android.utils.XEditText>
                <TextView
                    android:text="克拉段"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/text_carat_section" />
                <Button
                    android:id="@+id/jp_search_caratSection"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_expand_more_black_24dp"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dip"
                android:background="@color/grey_300"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:id="@+id/rap_shape_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/layout_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/shape"
                    android:textColor="#162834"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/jp_shape"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="12dp"
                    android:gravity="center|left"
                    android:text=""
                    android:textColor="#02a8f3"
                    android:textSize="11sp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/jp_recycler_shape"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dip"
                android:background="@color/grey_300"
                />
            <LinearLayout
                android:id="@+id/rap_color_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/layout_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/color"
                    android:textColor="#162834"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/jp_color"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="12dp"
                    android:gravity="center|left"
                    android:text=""
                    android:textColor="#02a8f3"
                    android:textSize="11sp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/jp_recycler_color"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dip"
                android:background="@color/grey_300"
                />
            <LinearLayout
                android:id="@+id/rap_clarity_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/layout_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/clarity"
                    android:textColor="#162834"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/jp_clarity"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="12dp"
                    android:gravity="center|left"
                    android:text=""
                    android:textColor="#02a8f3"
                    android:textSize="11sp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/jp_recycler_clarity"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dip"
                android:background="@color/grey_300"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="@color/search_Layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/threeEx"
                    android:textColor="#162834"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:textSize="15sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/jp_recycler_threeEx"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@color/grey_300"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="@color/search_Layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cut"
                    android:textColor="#162834"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:textSize="15sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/jp_recycler_cut"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@color/grey_300"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="@color/search_Layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/polish"
                    android:textColor="#162834"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:textSize="15sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/jp_recycler_polish"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@color/grey_300"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="@color/search_Layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/symmetry"
                    android:textColor="#162834"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:textSize="15sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/jp_recycler_symmetry"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@color/grey_300"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="@color/search_Layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fluore"
                    android:textColor="#162834"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:textSize="15sp" />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/jp_recycler_fluore"/>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="@color/grey_300"
                />
        </LinearLayout>
    </ScrollView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/grey_100"
        android:orientation="horizontal">
        <Button
            android:id="@+id/jp_search_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_margin="5dp"
            android:background="@drawable/btn_round"
            android:text="查询"/>
        <Button
            android:id="@+id/jp_search_resetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round"
            android:layout_margin="5dp"
            android:layout_weight="0.6"
            android:text="重置"/>
    </LinearLayout>
</LinearLayout>