<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">
    <com.zhubaokeji.library.TitleBar
        android:id="@+id/jp_home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.zhubaokeji.android.utils.MyTextView
        android:id="@+id/jp_textRoll_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:background="@color/white"
        android:textColor="@color/black"
        android:singleLine="true"
        android:text=""/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
        <cn.bingoogolapple.bgabanner.BGABanner
            android:id="@+id/jp_zoomCenter"
            style="@style/BannerDefaultStyle"
            app:banner_pointDrawable="@drawable/selector_banner_point"
            android:scaleType="centerInside"
            app:banner_transitionEffect="fade"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/jp_recycler_home"/>
    </LinearLayout>
</LinearLayout>