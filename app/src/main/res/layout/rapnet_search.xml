<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhubaokeji.library.TitleBar
        android:id="@+id/rapnetSearch_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <TextView
                    android:text="加点"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    />
                <FrameLayout
                    android:id="@+id/username_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.4">
                    <EditText
                        android:id="@+id/rap_search_discountPoint"
                        android:layout_width="match_parent"
                        android:background="@drawable/bg_edittext"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:inputType="number"
                        android:maxLength="10"
                        android:gravity="center"
                        android:text="3"
                        >
                    </EditText>
                    <Button
                        android:id="@+id/bt_rap_add"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:background="@drawable/ic_add_black_24dp"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        />
                    <Button
                        android:id="@+id/bt_rap_subtract"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:background="@drawable/ic_remove_black_24dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="2dp"
                        />
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">
                <TextView
                    android:text="汇率"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/text_rate" />

                <EditText
                    android:id="@+id/rap_search_rate"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_edittext"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="6.7"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="20">
                </EditText>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="#ffd3dde6"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:text="克拉"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    />

                <EditText
                    android:id="@+id/edit_rap_caratStart"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_edittext"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:maxLength="20"
                    android:layout_weight="0.5">
                </EditText>
                <TextView
                    android:text="~"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"/>
                <EditText
                    android:id="@+id/edit_rap_caratEnd"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_edittext"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:maxLength="20"
                    android:layout_weight="0.5">
                </EditText>
                <TextView
                    android:text="克拉段"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:id="@+id/rap_caratSection"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_expand_more_black_24dp"
                    android:layout_marginRight="5dp"
                    />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="#ffd3dde6"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="1"
                >

                <TextView
                    android:text="证书"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    />
                <Button
                    android:id="@+id/btn_rap_gia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/btn_round"
                    android:text="GIA"/>
                <Button
                    android:id="@+id/btn_rap_igi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/btn_round"
                    android:text="IGI"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="地址"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    />
                <Button
                    android:id="@+id/btn_rap_hk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/btn_round"
                    android:text="HK"/>
                <Button
                    android:id="@+id/btn_rap_ind"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/btn_round"
                    android:text="IND"/>
            </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dip"
                android:background="#ccc"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:id="@+id/rap_shape_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/layout_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/shape"
                    android:textColor="#162834"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/rap_shape"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="12dp"
                    android:gravity="center|left"
                    android:text=""
                    android:textColor="#02a8f3"
                    android:textSize="11sp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rap_recycler_shape"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dip"
                android:background="#ccc"
                />
            <LinearLayout
                android:id="@+id/rap_color_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/layout_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color"
                    android:layout_gravity="center"
                    android:textColor="#162834"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/rap_color"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="12dp"
                    android:text=""
                    android:gravity="center|left"
                    android:textColor="#02a8f3"
                    android:textSize="11sp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rap_recycler_color"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dip"
                android:background="#ccc"
                />

            <LinearLayout
                android:id="@+id/layout_clarity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/layout_border">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/clarity"
                    android:textColor="#162834"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/rap_clarity"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="12dp"
                    android:text=""
                    android:gravity="center|left"
                    android:textColor="#02a8f3"
                    android:textSize="11sp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rap_recycler_clarity"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dip"
                android:background="#ccc"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="@color/search_Layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/threeEx"
                    android:textColor="#162834"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="15sp" />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rap_recycler_threeEx"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="#ccc"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="@color/search_Layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cut"
                    android:textColor="#162834"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="15sp" />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rap_recycler_cut"/>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="#ccc"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="@color/search_Layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/polish"
                    android:textColor="#162834"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="15sp" />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rap_recycler_polish"/>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dip"
                android:background="#ccc"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="@color/search_Layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/symmetry"
                    android:textColor="#162834"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="15sp" />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rap_recycler_symmetry"/>
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="6dip"
                android:background="#ccc"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="@color/search_Layout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fluore"
                    android:textColor="#162834"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:textSize="15sp" />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rap_recycler_fluore"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/rapnet_search_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_margin="5dp"
            android:background="@drawable/btn_round"
            android:text="查询"/>
        <Button
            android:id="@+id/rapnet_search_resetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round"
            android:layout_margin="5dp"
            android:layout_weight="0.6"
            android:text="重置"/>
    </LinearLayout>
</LinearLayout>