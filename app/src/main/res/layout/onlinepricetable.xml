<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhubaokeji.library.TitleBar
        android:id="@+id/onlineprice_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <com.zhubaokeji.android.fragment.StatusLayoutFragment
        android:id="@+id/status_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:background="@color/blue_350">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="形状:"/>
            <TextView
                android:id="@+id/onlineprice_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/red_500"
                android:text="圆形"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="克拉:"/>
            <TextView
                android:id="@+id/onlineprice_carat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/red_500"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="单位:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/red_500"
                android:text="100$"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_onlineprice_color"
                android:layout_width="match_parent"
                android:background="@color/blue_50"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#EEEEEE">
         <android.support.v7.widget.RecyclerView
             android:id="@+id/recycler_onlineprice_clarity"
             android:layout_width="match_parent"
             android:background="@color/blue_50"
             android:layout_height="0dp"
             android:layout_weight="0.15"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_onlineprice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.84"/>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
    </com.zhubaokeji.android.fragment.StatusLayoutFragment>
</LinearLayout>